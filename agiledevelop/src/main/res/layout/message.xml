<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/message_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/state_error"/>

    <TextView
        android:id="@+id/message_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:lineSpacingExtra="8dp"
        android:paddingLeft="0dp"
        android:paddingRight="20dp"
        android:text="@string/state_error_msg"
        android:textColor="#ff999999"
        android:textSize="16sp"/>

   <!-- <Button
        android:id="@+id/btn_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"

        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="@string/state_again"
        android:textColor="#FFF"
        android:textSize="18sp"/>-->
    <!--android:background="@drawable/bg_btn_red"-->

    <com.simon.agiledevelop.widget.SelectorButton
        android:id="@+id/btn_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="@string/state_again"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:normalBackgroundColor="#FF0000"
        app:pressedBackgroundColor="#B71C1C"
        app:radius="10dp"
        app:unableBackgroundColor="@android:color/holo_red_light"/>

</LinearLayout>