<resources xmlns:tools="http://schemas.android.com/tools"
           xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
    </style>

    <style name="AppTheme.NoActionBar">

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.Trans">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <style name="Genius.Widget.Loading" parent="">
        <item name="gBackgroundLineSize">@dimen/g_loading_lineSize</item>
        <item name="gForegroundLineSize">@dimen/g_loading_lineSize</item>

        <item name="gBackgroundColor">@color/g_default_loading_bg</item>
        <item name="gForegroundColor">@array/g_default_loading_fg</item>

        <item name="gLineStyle">circle</item>
        <item name="gAutoRun">true</item>
    </style>

    <style name="detail_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/px_2_dp_10</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">@dimen/px_2_dp_10</item>
        <item name="android:layout_marginLeft">@dimen/px_2_dp_20</item>
    </style>

    <style name="TagGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="atg_isAppendMode">false</item>
        <item name="atg_borderColor">#666666</item>
        <item name="atg_textColor">#666666</item>
        <item name="atg_backgroundColor">#FFFFFF</item>
        <item name="atg_dashBorderColor">#AAAAAA</item>
        <item name="atg_inputHintColor">#80000000</item>
        <item name="atg_inputTextColor">#DE000000</item>
        <item name="atg_checkedBorderColor">#49C120</item>
        <item name="atg_checkedTextColor">#FFFFFF</item>
        <item name="atg_checkedMarkerColor">#FFFFFF</item>
        <item name="atg_checkedBackgroundColor">#49C120</item>
        <item name="atg_pressedBackgroundColor">#EDEDED</item>
        <item name="atg_borderStrokeWidth">0.5dp</item>
        <item name="atg_textSize">13sp</item>
        <item name="atg_horizontalSpacing">8dp</item>
        <item name="atg_verticalSpacing">4dp</item>
        <item name="atg_horizontalPadding">12dp</item>
        <item name="atg_verticalPadding">3dp</item>
    </style>

    <style name="SpotsDialogDefault" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">Loadingâ€¦</item>
        <item name="DialogSpotCount">5</item>
    </style>


    <style name="user_info_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:layout_marginTop">@dimen/activity_horizontal_margin</item>-->
        <!--<item name="android:drawablePadding">@dimen/activity_horizontal_margin</item>-->
        <!--<item name="android:drawablePadding">@dimen/px_2_dp_10</item>-->
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/color_666666</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="user_count_tv">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_gray_line_r</item>
        <item name="android:textColor">@color/color_666666</item>
        <item name="android:singleLine">true</item>
        <!--<item name="android:layout_marginTop">@dimen/activity_horizontal_margin</item>-->
        <!--<item name="android:drawablePadding">@dimen/activity_horizontal_margin</item>-->
        <!--<item name="android:drawablePadding">@dimen/px_2_dp_10</item>-->
    </style>

    <style name="Setting_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/px_dp_20</item>
        <item name="android:paddingLeft">@dimen/px_dp_10</item>
        <item name="android:paddingTop">@dimen/px_dp_20</item>
        <item name="android:textColor">@color/color_666666</item>
        <item name="android:textSize">@dimen/px_dp_32</item>
    </style>

</resources>
