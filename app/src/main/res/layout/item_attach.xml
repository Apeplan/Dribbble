<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/px_2_dp_16"
    android:layout_marginRight="@dimen/px_2_dp_16"
    android:layout_marginTop="@dimen/px_2_dp_16">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imv_attach_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/placeholder"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imv_attach_pic"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/px_2_dp_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_views_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_visibility_gray_24dp"
                android:drawablePadding="@dimen/px_2_dp_10"
                android:gravity="center"
                android:padding="@dimen/px_2_dp_10"
                android:textSize="16sp"
                tools:text="3"/>

            <TextView
                android:id="@+id/tv_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_2_dp_20"
                android:drawablePadding="@dimen/px_2_dp_10"
                android:gravity="center"
                android:padding="@dimen/px_2_dp_10"
                android:textSize="16sp"
                tools:text="3"/>

            <ImageView
                android:id="@+id/tv_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_2_dp_20"
                android:background="@drawable/shape_download_bg"
                android:src="@drawable/ic_file_download_gray_24dp"/>

        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>